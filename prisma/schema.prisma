// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlantsCategory {
  id      Int    @id @default(autoincrement())
  name_uz String
  name_en String
  name_ru String
  image   String

  plantTypes PlantsType[]
  Plant      Plant[]
}

model PlantsType {
  id         Int     @id @default(autoincrement())
  name_uz    String
  name_en    String
  name_ru    String
  image      String
  plants     Plant[]
  categoryId Int

  category PlantsCategory @relation(fields: [categoryId], references: [id])
}

model Plant {
  id               Int            @id @default(autoincrement())
  name_uz          String
  name_en          String
  name_ru          String
  image            String
  plantType        PlantsType     @relation(fields: [plantTypeId], references: [id])
  plantTypeId      Int
  plantsCategory   PlantsCategory @relation(fields: [plantsCategoryId], references: [id])
  plantsCategoryId Int
  describtion_uz   String
  describtion_ru   String
  describtion_en   String
}

model Product {
  id          Int     @id @default(autoincrement())
  name_uz     String
  name_en     String
  name_ru     String
  plantTypeId Int
  plantType   Order[]
  price       Int
  image       String
  cart        Cart[]
}

model Order {
  id            Int     @id @default(autoincrement())
  customerName  String
  customerPhone String
  productId     Int
  product       Product @relation(fields: [productId], references: [id])
}

model Consultation {
  id            Int     @id @default(autoincrement())
  fullName      String
  dagree        String
  phone_number  String
  image         String
  telegram_user String
  youtube_url   String?
  questions Questions[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Carts     Cart[]
}

model Information {
  id           Int    @id @default(autoincrement())
  address      String
  crops        String
  lat          String
  long         String
  soilsContent String @default("null")
  regionId     Int    @default(1)
  districtId   Int    @default(1)
  userId       Int    @default(1)
}

model Region {
  id        Int        @id @default(autoincrement())
  name_uz   String
  name_ru   String
  name_en   String
  districts District[]
}

model District {
  id       Int    @id @default(autoincrement())
  name_uz  String
  name_ru  String
  name_en  String
  regionId Int
  region   Region @relation(fields: [regionId], references: [id])
}

model Cart {
  id        Int     @id @default(autoincrement())
  userId    Int
  productId Int     @unique() @default(0)
  users     User    @relation(fields: [userId], references: [id])
  prodcuts  Product @relation(fields: [productId], references: [id])
  count     Int     @default(1)
}

model Questions {
  id       Int    @id @default(autoincrement())
  fullName String
  phone    String
  question String
  consultantId   Int 
  consultant     Consultation   @relation(fields: [consultantId], references: [id])
}
